{
  "name": "tonik/wordpress-theme-boilerplate",
  "description": "A modern WordPress boilerplate for building organized and standardized themes",
  "keywords": ["tonik", "theme", "boilerplate", "wordpress", "wordpress-starter-theme", "wordpress-theme"],
  "license": "MIT",
  "type": "wordpress-theme",
  "require": {
    "php": ">=5.2.4",
    "mobiledetect/mobiledetectlib": "^2.8",
    "cmb2/cmb2": "dev-master"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "0.14.*"
  },
  "autoload": {
    "files": ["vendor/cmb2/cmb2/init.php"]
  },
  "scripts": {
    "lint": [
      "phpcs --standard=.phpcs.xml ./"
    ]
  }
}
